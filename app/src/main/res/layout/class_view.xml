<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nclass"
            android:text="Class Name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/strenth"
            android:text="Strength"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_below="@id/nclass"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/stats"
             android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/status"
            android:layout_marginLeft="300dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>



